<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={pageDescription} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={pageDescription} />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:title" content={pageTitle} />
    <meta property="twitter:description" content={pageDescription} />
    
    <title>{pageTitle}</title>
    <link rel="stylesheet" href="/dist/style.css" />
    
    <!-- Favicon (add your favicon files to public folder) -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body class="bg-gray-900 text-gray-100 font-sans min-h-screen flex flex-col">
    <!-- Header -->
    <header class="sticky top-0 z-50 py-4 px-6 md:px-12 bg-gray-800/95 backdrop-blur-sm shadow-lg border-b border-gray-700">
      <nav class="max-w-6xl mx-auto flex justify-between items-center">
        <!-- Logo -->
        <a href="/" class="text-xl md:text-2xl font-bold
                            text-transparent bg-clip-text
                            bg-gradient-to-r from-amber-300 to-orange-400
                            hover:scale-105 transition-transform">
          Overlanding Project Lab
        </a>

        <!-- Desktop Navigation -->
        <ul class="hidden md:flex space-x-8">
          {navItems.map(item => (
            <li>
              <a 
                href={item.href} 
                class={`font-medium transition-colors relative group ${
                  isActive(item.href) 
                    ? 'text-amber-400' 
                    : 'text-gray-300 hover:text-amber-400'
                }`}
              >
                {item.label}
                <span class={`absolute bottom-0 left-0 w-full h-0.5 bg-amber-400 transform origin-left transition-transform ${
                  isActive(item.href) ? 'scale-x-100' : 'scale-x-0 group-hover:scale-x-100'
                }`}></span>
              </a>
            </li>
          ))}
        </ul>

        <!-- Mobile Menu Button -->
        <button 
          id="mobile-menu-button"
          class="md:hidden text-gray-300 hover:text-amber-400 focus:outline-none"
          aria-label="Toggle mobile menu"
        >
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </nav>

      <!-- Mobile Navigation -->
      <div id="mobile-menu" class="hidden md:hidden mt-4 pb-4 border-t border-gray-700">
        <ul class="flex flex-col space-y-3 pt-4">
          {navItems.map(item => (
            <li>
              <a 
                href={item.href}
                class={`block px-4 py-2 rounded-lg transition-colors ${
                  isActive(item.href)
                    ? 'bg-amber-500 text-gray-900 font-semibold'
                    : 'text-gray-300 hover:bg-gray-700'
                }`}
              >
                {item.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </header>

    <!-- Main Content -->
    <main class="flex-grow">
      <slot />
    </main>

    <!-- Footer -->
    <footer class="py-12 px-6 md:px-12 bg-gray-800 mt-auto border-t border-gray-700">
      <div class="max-w-6xl mx-auto">
        <div class="grid md:grid-cols-3 gap-8 mb-8">
          <!-- About Section -->
          <div>
            <h3 class="text-lg font-bold text-amber-400 mb-3">Overlanding Project Lab</h3>
            <p class="text-gray-400 text-sm leading-relaxed">
              Documenting authentic overlanding builds, vehicle modifications, and off-road adventures.
            </p>
          </div>

          <!-- Quick Links -->
          <div>
            <h3 class="text-lg font-bold text-amber-400 mb-3">Quick Links</h3>
            <ul class="space-y-2">
              {navItems.map(item => (
                <li>
                  <a href={item.href} class="text-gray-400 hover:text-amber-400 text-sm transition-colors">
                    {item.label}
                  </a>
                </li>
              ))}
            </ul>
          </div>

          <!-- Social Links -->
          <div>
            <h3 class="text-lg font-bold text-amber-400 mb-3">Follow Along</h3>
            <div class="flex space-x-4">
              {socialLinks.map(social => (
                <a 
                  href={social.url}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-gray-400 hover:text-amber-400 transition-colors"
                  aria-label={social.name}
                >
                  <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                    <path d={social.icon} />
                  </svg>
                </a>
              ))}
            </div>
            <a 
              href="mailto:overlandprojectlab@gmail.com"
              class="inline-block mt-4 text-gray-400 hover:text-amber-400 text-sm transition-colors"
            >
              overlandprojectlab@gmail.com
            </a>
          </div>
        </div>

        <!-- Copyright -->
        <div class="pt-8 border-t border-gray-700 text-center">
          <p class="text-gray-400 text-sm">
            Â© {new Date().getFullYear()} Overlanding Project Lab. All rights reserved.
          </p>
        </div>
      </div>
    </footer>

    <!-- Mobile Menu Script -->
    <script is:inline>
      document.addEventListener('DOMContentLoaded', () => {
        const menuButton = document.getElementById('mobile-menu-button');
        const mobileMenu = document.getElementById('mobile-menu');
        
        if (menuButton && mobileMenu) {
          menuButton.addEventListener('click', () => {
            mobileMenu.classList.toggle('hidden');
          });
        }
      });
    </script>
  </body>
</html>
