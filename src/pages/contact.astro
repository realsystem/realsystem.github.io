---
import BaseLayout from '../layouts/BaseLayout.astro';

const email = 'overlandprojectlab@gmail.com';

const socialLinks = [
  {
    name: 'YouTube',
    url: 'https://www.youtube.com/@realsystemrobot',
    icon: 'üì∫',
    description: 'Subscribe for weekly builds and adventures'
  },
  {
    name: 'Instagram',
    url: 'https://instagram.com/overlandingprojectlab',
    icon: 'üì∏',
    description: 'Behind-the-scenes and daily updates'
  },
];

const contactReasons = [
  {
    icon: 'ü§ù',
    title: 'Collaboration',
    description: 'Interested in working together on a build or expedition'
  },
  {
    icon: 'üé•',
    title: 'Sponsorship',
    description: 'Product reviews, brand partnerships, or sponsored content'
  },
  {
    icon: 'üí°',
    title: 'Questions',
    description: 'Technical questions about builds or gear recommendations'
  },
  {
    icon: 'üì∞',
    title: 'Media',
    description: 'Press inquiries or interview requests'
  },
];

const faqs = [
  {
    question: 'Do you reply to all emails?',
    answer: 'I try my best to respond to everyone, though it may take a few days during busy periods. For quick questions, try leaving a comment on YouTube!'
  },
  {
    question: 'Can you help with my build?',
    answer: 'While I can\'t provide detailed one-on-one consultations, I cover many topics in my videos. Check out the channel and feel free to ask specific questions in the comments.'
  },
  {
    question: 'Are you available for speaking engagements?',
    answer: 'Yes! I\'m open to speaking at overlanding events, expos, and meetups. Reach out via email with details about your event.'
  },
];
---

<BaseLayout title="Contact | Overlanding Project Lab">
  <!-- Hero Section -->
  <section class="relative min-h-[50vh] flex items-center justify-center px-6 bg-gradient-to-b from-gray-900 to-gray-800">
    <div class="max-w-4xl mx-auto text-center">
      <h1 class="text-4xl md:text-6xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-amber-400 to-rose-500 mb-6">
        Let's Connect
      </h1>
      <p class="text-xl md:text-2xl text-gray-300 leading-relaxed">
        Have a question, collaboration idea, or just want to say hi?
      </p>
    </div>
  </section>

  <!-- Contact Reasons Section -->
  <section class="py-20 px-6 bg-gray-800">
    <div class="max-w-6xl mx-auto">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-100 text-center mb-4">
        What Can I Help With?
      </h2>
      <p class="text-gray-400 text-center mb-12 max-w-2xl mx-auto">
        Whether you're looking to collaborate, need advice, or have a business inquiry‚ÄîI'd love to hear from you
      </p>
      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
        {contactReasons.map(reason => (
          <div class="bg-gray-900 p-6 rounded-lg shadow-xl text-center hover:shadow-2xl transition-shadow">
            <div class="text-4xl mb-3">{reason.icon}</div>
            <h3 class="text-lg font-bold text-amber-400 mb-2">{reason.title}</h3>
            <p class="text-gray-300 text-sm">{reason.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Main Contact Section -->
  <section class="py-20 px-6 max-w-5xl mx-auto">
    <div class="grid md:grid-cols-2 gap-12">
      <!-- Email Contact -->
      <div class="bg-gray-800 p-8 rounded-lg shadow-xl">
        <h2 class="text-2xl font-bold text-gray-100 mb-6">
          üìß Email Me
        </h2>
        <p class="text-gray-300 mb-6 leading-relaxed">
          For business inquiries, collaboration proposals, or detailed questions, email is the best way to reach me. I typically respond within 2-3 business days.
        </p>
        <a 
          href={`mailto:${email}`}
          class="inline-block px-6 py-3 bg-amber-500 hover:bg-amber-600 rounded-lg font-semibold text-gray-900 transition-all transform hover:scale-105"
        >
          {email}
        </a>
        <div class="mt-8 pt-8 border-t border-gray-700">
          <h3 class="text-lg font-semibold text-gray-100 mb-3">
            What to Include:
          </h3>
          <ul class="space-y-2 text-gray-300 text-sm">
            <li class="flex items-start">
              <span class="text-amber-400 mr-2">‚Ä¢</span>
              <span>Your name and contact info</span>
            </li>
            <li class="flex items-start">
              <span class="text-amber-400 mr-2">‚Ä¢</span>
              <span>Subject line that clearly states your purpose</span>
            </li>
            <li class="flex items-start">
              <span class="text-amber-400 mr-2">‚Ä¢</span>
              <span>Brief description of your inquiry or proposal</span>
            </li>
            <li class="flex items-start">
              <span class="text-amber-400 mr-2">‚Ä¢</span>
              <span>Relevant links or attachments if applicable</span>
            </li>
          </ul>
        </div>
      </div>

      <!-- Social Media Contact -->
      <div class="space-y-6">
        <div class="bg-gray-800 p-8 rounded-lg shadow-xl">
          <h2 class="text-2xl font-bold text-gray-100 mb-6">
            üåê Social Media
          </h2>
          <p class="text-gray-300 mb-6">
            Follow along for daily updates, behind-the-scenes content, and quick interactions with the community.
          </p>
          <div class="space-y-4">
            {socialLinks.map(social => (
              <a 
                href={social.url}
                target="_blank"
                rel="noopener noreferrer"
                class="flex items-start gap-4 p-4 bg-gray-900 rounded-lg hover:bg-gray-700 transition-colors group"
              >
                <div class="text-3xl">{social.icon}</div>
                <div class="flex-grow">
                  <h3 class="text-lg font-semibold text-amber-400 group-hover:text-amber-300 mb-1">
                    {social.name}
                  </h3>
                  <p class="text-gray-400 text-sm">{social.description}</p>
                </div>
                <span class="text-gray-500 group-hover:text-gray-400">‚Üí</span>
              </a>
            ))}
          </div>
        </div>

        <!-- Quick Tips -->
        <div class="bg-gradient-to-br from-amber-500 to-rose-500 p-8 rounded-lg shadow-xl">
          <h3 class="text-xl font-bold text-gray-900 mb-3">
            üí¨ Quick Question?
          </h3>
          <p class="text-gray-900 mb-4">
            For fast answers about specific builds or gear, leave a comment on the relevant YouTube video‚ÄîI'm active in the comments and the community often helps too!
          </p>
          <a 
            href="https://www.youtube.com/@realsystemrobot"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-block px-6 py-3 bg-gray-900 hover:bg-gray-800 text-white rounded-lg font-semibold transition-all"
          >
            Visit Channel
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="py-20 px-6 bg-gray-800">
    <div class="max-w-4xl mx-auto">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-100 text-center mb-12">
        Frequently Asked Questions
      </h2>
      <div class="space-y-6">
        {faqs.map(faq => (
          <div class="bg-gray-900 p-6 rounded-lg shadow-xl">
            <h3 class="text-xl font-semibold text-amber-400 mb-3">
              {faq.question}
            </h3>
            <p class="text-gray-300 leading-relaxed">
              {faq.answer}
            </p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Response Time Notice -->
  <section class="py-16 px-6 max-w-4xl mx-auto">
    <div class="bg-gray-800 border-l-4 border-amber-400 p-6 rounded-r-lg">
      <h3 class="text-lg font-semibold text-gray-100 mb-2">
        ‚è∞ Response Time
      </h3>
      <p class="text-gray-300">
        I'm often out on the trail or in the garage working on builds, so please allow 2-5 business days for email responses. Thanks for your patience!
      </p>
    </div>
  </section>

  <!-- Newsletter Signup (Optional) -->
  <section class="py-20 px-6 bg-gradient-to-r from-amber-500 to-rose-500">
    <div class="max-w-3xl mx-auto text-center">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
        Stay Updated
      </h2>
      <p class="text-gray-900 text-lg mb-8 opacity-90">
        Subscribe on YouTube to never miss a new build video, gear review, or adventure vlog
      </p>
      <a 
        href="https://www.youtube.com/@realsystemrobot?sub_confirmation=1"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-block px-8 py-4 bg-gray-900 hover:bg-gray-800 text-white rounded-lg font-semibold transition-all transform hover:scale-105 shadow-xl"
      >
        Subscribe Now
      </a>
    </div>
  </section>
</BaseLayout>
