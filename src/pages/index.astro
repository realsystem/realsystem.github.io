---
import BaseLayout from '../layouts/BaseLayout.astro';

const youtubeUrl = 'https://www.youtube.com/@realsystemrobot';

// Replace these with your actual video IDs from YouTube
const featuredVideos = [
  { id: 'VIDEO_ID_1', title: 'Build Series Part 1' },
  { id: 'VIDEO_ID_2', title: 'Epic Trail Adventure' },
  { id: 'VIDEO_ID_3', title: 'Gear Review & Tips' },
];

const features = [
  {
    title: 'Custom Builds',
    description: 'In-depth vehicle modifications and overlanding rig builds',
    icon: 'üîß'
  },
  {
    title: 'Trail Adventures',
    description: 'Real expeditions to remote locations and challenging terrain',
    icon: 'üèîÔ∏è'
  },
  {
    title: 'Gear Reviews',
    description: 'Honest reviews of equipment tested in the field',
    icon: '‚öôÔ∏è'
  }
];
---

<BaseLayout title="Home | Overlanding Project Lab">
  <!-- Hero Section -->
  <section class="min-h-screen flex flex-col justify-center items-center text-center px-6 bg-gradient-to-b from-gray-900 via-gray-800 to-gray-900">
    <h1 class="text-5xl md:text-7xl font-bold leading-[1.15] text-transparent bg-clip-text bg-gradient-to-r from-amber-400 via-orange-500 to-rose-500 mb-6">
      Overlanding. Builds. Travel.
    </h1>
    <p class="mt-6 text-lg md:text-xl text-gray-300 max-w-2xl leading-relaxed">
      Custom modifications, real expeditions, and off-road adventures. Follow along for authentic builds and travel stories from the trail.
    </p>
    <div class="mt-10 flex flex-col sm:flex-row gap-4">
      <a 
        href={youtubeUrl} 
        target="_blank" 
        rel="noopener noreferrer"
        class="px-8 py-4 bg-amber-500 hover:bg-amber-600 rounded-lg font-semibold text-gray-900 transition-all transform hover:scale-105 shadow-lg"
      >
        Visit YouTube Channel
      </a>
      <a 
        href="#videos" 
        class="px-8 py-4 bg-gray-700 hover:bg-gray-600 rounded-lg font-semibold text-gray-100 transition-all"
      >
        Watch Videos
      </a>
    </div>
  </section>

  <!-- Features Section -->
  <section class="py-20 px-6 bg-gray-800">
    <div class="max-w-6xl mx-auto">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-100 text-center mb-12">
        What We Cover
      </h2>
      <div class="grid md:grid-cols-3 gap-8">
        {features.map(feature => (
          <div class="bg-gray-900 p-8 rounded-lg shadow-xl hover:shadow-2xl transition-shadow">
            <div class="text-4xl mb-4">{feature.icon}</div>
            <h3 class="text-xl font-bold text-amber-400 mb-3">{feature.title}</h3>
            <p class="text-gray-300">{feature.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Featured Videos Section -->
  <section id="videos" class="py-20 px-6 max-w-6xl mx-auto">
    <h2 class="text-3xl md:text-4xl font-bold text-gray-100 mb-4 text-center">
      Featured Videos
    </h2>
    <p class="text-gray-400 text-center mb-12 max-w-2xl mx-auto">
      Check out our latest builds, adventures, and gear reviews
    </p>
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      {featuredVideos.map(video => (
        <div class="group">
          <iframe 
            class="w-full h-56 md:h-64 rounded-lg shadow-lg transition-transform group-hover:scale-105" 
            src={`https://www.youtube.com/embed/${video.id}`}
            title={video.title}
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
            allowfullscreen
          />
          <p class="mt-3 text-gray-300 text-sm font-medium">{video.title}</p>
        </div>
      ))}
    </div>
    <div class="text-center mt-12">
      <a 
        href={youtubeUrl} 
        target="_blank"
        rel="noopener noreferrer"
        class="inline-block px-6 py-3 bg-gray-700 hover:bg-gray-600 text-gray-100 rounded-lg transition-colors"
      >
        View All Videos ‚Üí
      </a>
    </div>
  </section>

  <!-- Call to Action Section -->
  <section class="py-20 px-6 bg-gradient-to-r from-amber-500 to-rose-500">
    <div class="max-w-4xl mx-auto text-center">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
        Ready to Start Your Journey?
      </h2>
      <p class="text-gray-900 text-lg mb-8 opacity-90">
        Subscribe to the channel for weekly content on overlanding builds and adventures
      </p>
      <a 
        href={youtubeUrl} 
        target="_blank"
        rel="noopener noreferrer" 
        class="inline-block px-8 py-4 bg-gray-900 hover:bg-gray-800 text-white rounded-lg font-semibold transition-all transform hover:scale-105 shadow-xl"
      >
        Subscribe Now
      </a>
    </div>
  </section>
</BaseLayout>

<style>
  @keyframes gradient-x {
    0%, 100% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
  }
  
  .animate-gradient-x {
    background-size: 200% 200%;
    animation: gradient-x 3s ease infinite;
  }
</style>
